<modal #addPatient>
    <modal-header [show-close]="true">
        <h4 class="modal-title">{{addPateintModalTitle}}</h4>
    </modal-header>
    <modal-body>
        <div class="form form-horizontal">
            <div class="form-group">
                <div class="col-md-3">
                    <label for="txtFirstName">First name*</label>
                </div>
                <div class="col-md-7">
                    <input type="text" id="txtFirstName" [(ngModel)]="patFirstName" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label [hidden]="!valFirstName" class="text-danger">Invalid</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label for="txtMiddleName">Middle name</label>
                </div>
                <div class="col-md-7">
                    <input type="text" id="txtMiddleName" [(ngModel)]="patMiddleName" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label [hidden]="!valMiddleName" class="text-danger">Invalid</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label for="txtLastName">Last name*</label>
                </div>
                <div class="col-md-7">
                    <input type="text" id="txtLastName" [(ngModel)]="patLastName" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label [hidden]="!valLastName" class="text-danger">Invalid</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label for="txtEmail">Email id*</label>
                </div>
                <div class="col-md-7">
                    <input type="email" id="txtEmail" [(ngModel)]="patEmail" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label [hidden]="!valEmailId" class="text-danger">Invalid</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label for="txtAddress">Address*</label>
                </div>
                <div class="col-md-7">
                    <input type="text" id="txtAddress" [(ngModel)]="patAddress" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label [hidden]="!valAddress" class="text-danger">Invalid</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label for="txtAge">Age*</label>
                </div>
                <div class="col-md-7">
                    <input type="number" id="txtAge" [(ngModel)]="patAge" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label [hidden]="!valAge" class="text-danger">Invalid</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label for="txtGender">Gender*</label>
                </div>
                <div class="col-md-7">
                    <input type="radio" name="gender" [checked]="isMale" (click)="toggleGender(1)" /> Male
                    <input type="radio" name="gender" [checked]="isFemale" (click)="toggleGender(1)" /> Female
                </div>
                <div class="col-md-2">
                    <label [hidden]="!valGender" class="text-danger">Invalid</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label for="txtPhone">Phone*</label>
                </div>
                <div class="col-md-7">
                    <input type="number" id="txtPhone" [(ngModel)]="patPhone" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label [hidden]="!valPhone" class="text-danger">Invalid</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4 col-md-offset-3">
                    <input type="button" class="btn btn-success" (click)="savePatient()" [value]="patientModalSaveButtonValue" />
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <label>* denotes all the required fields</label>
            </div>
        </div>
    </modal-body>
    <modal-footer [show-default-buttons]="true"></modal-footer>
</modal>

<div class="row">
    <div class="col-md-2">
        <button class="btn btn-primary" type="button" (click)="togglePatientModal(true)">Add</button>
    </div>
</div>
<div class="listDiv">
    <div class="row gridTopBar">
        <div class="col-md-2">
            <b>Name</b>
        </div>
        <div class="col-md-3">
            <b>Email</b>
        </div>
        <div class="col-md-3">
            <b>Address</b>
        </div>
        <div class="col-md-2">
            <b>Phone</b>
        </div>
    </div>
    <div class="row marginTopBottom" *ngFor="let patient of patientList">
        <div class="col-md-2">
            {{concatNames(patient.FirstName,patient.LastName)}}
        </div>
        <div class="col-md-3">
            {{patient.EmailId}}
        </div>
        <div class="col-md-3">
            {{patient.Address}}
        </div>
        <div class="col-md-2">
            {{patient.PhoneNumber}}
        </div>
        <div class="col-md-1">
            <button class="btn btn-default" (click)="editPatient(patient)">Edit</button>
        </div>
    </div>
</div>