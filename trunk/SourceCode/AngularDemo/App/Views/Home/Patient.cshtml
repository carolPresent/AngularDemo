<div class="form form-horizontal">
    <div class="form-group">
        <div class="col-md-3">
            <label for="txtFirstName">First name</label>
        </div>
        <div class="col-md-7">
            <input type="text" id="txtFirstName" [(ngModel)]="patFirstName" class="form-control" />
        </div>
        <div class="col-md-2">
            <label [hidden]="!valFirstName" class="text-danger">Invalid</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <label for="txtMiddleName">Middle name</label>
        </div>
        <div class="col-md-7">
            <input type="text" id="txtMiddleName" [(ngModel)]="patMiddleName" class="form-control" />
        </div>
        <div class="col-md-2">
            <label [hidden]="!valMiddleName" class="text-danger">Invalid</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <label for="txtLastName">Last name</label>
        </div>
        <div class="col-md-7">
            <input type="text" id="txtLastName" [(ngModel)]="patLastName" class="form-control" />
        </div>
        <div class="col-md-2">
            <label [hidden]="!valLastName" class="text-danger">Invalid</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <label for="txtAddress">Address</label>
        </div>
        <div class="col-md-7">
            <input type="text" id="txtAddress" [(ngModel)]="patAddress" class="form-control" />
        </div>
        <div class="col-md-2">
            <label [hidden]="!valAddress" class="text-danger">Invalid</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <label for="txtAge">Age</label>
        </div>
        <div class="col-md-7">
            <input type="text" id="txtAge" [(ngModel)]="patAge" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <label for="txtGender">Gender</label>
        </div>
        <div class="col-md-7">
            <input type="radio" name="gender" (click)="toggleGender(1)" /> Male
            <input type="radio" name="gender" (click)="toggleGender(1)" /> Female
        </div>
        <div class="col-md-2">
            <label [hidden]="!valGender" class="text-danger">Invalid</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <label for="txtPhone">Phone</label>
        </div>
        <div class="col-md-7">
            <input type="number" id="txtPhone" [(ngModel)]="patPhone" class="form-control" />
        </div>
        <div class="col-md-2">
            <label [hidden]="!valPhone" class="text-danger">Invalid</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 col-md-offset-3">
            <input type="button" class="btn btn-success" (click)="savePatient()" value="Save" />
        </div>
    </div>
</div>
