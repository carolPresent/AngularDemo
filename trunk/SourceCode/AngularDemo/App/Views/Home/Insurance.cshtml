<div class="form form-horizontal">
    <div class="form-group">
        <div class="col-md-3">
            <label for="txtName">Name</label>
        </div>
        <div class="col-md-7">
            <input type="text" id="txtName" [(ngModel)]="insName" class="form-control" />
        </div>
        <div class="col-md-2">
            <label [hidden]="!valName" class="text-danger">Invalid</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <label for="txtAddress">Address</label>
        </div>
        <div class="col-md-7">
            <input type="text" id="txtAddress" [(ngModel)]="insAddress" class="form-control" />
        </div>
        <div class="col-md-2">
            <label [hidden]="!valAddress" class="text-danger">Invalid</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <label for="txtPhone">Phone</label>
        </div>
        <div class="col-md-7">
            <input type="number" id="txtPhone" [(ngModel)]="insPhone" class="form-control" />
        </div>
        <div class="col-md-2">
            <label [hidden]="!valPhone" class="text-danger">Invalid</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <label for="txtPublicId">Public id</label>
        </div>
        <div class="col-md-7">
            <input type="text" id="txtPublicId" [(ngModel)]="insPublicId" class="form-control" />
        </div>
        <div class="col-md-2">
            <label [hidden]="!valPublicId" class="text-danger">Invalid</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 col-md-offset-3">
            <input type="button" class="btn btn-success" (click)="saveInsurance()" value="Save" />
        </div>
    </div>
</div>